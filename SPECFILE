      version: 5
      server:
        start_service: true
      agent:
        start_service: true
        parcel_dir: /mnt/cloudera/parcels
        log_file: /mnt/log/cloudera-scm-agent/cloudera-scm-agent.log
    sentry:
      start_service: true
    extra_properties:
      core: {}
      hdfs: {}
      mapred: {}
      yarn: {}
